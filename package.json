{
  "name": "lwc-builder",
  "displayName": "lwc-builder",
  "publisher": "lwc-builder",
  "description": "VSCode extension to build LWC easily",
  "version": "0.1.0",
  "license": "BSD-3-Clause",
  "engines": {
    "vscode": "^1.52.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:lwc-builder.openLWCBuilder"
  ],
  "main": "./out/src/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "lwc-builder.openLWCBuilder",
        "title": "Open LWC Builder"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "lwc-builder.openLWCBuilder",
          "title": "Open LWC Builder",
          "when": "explorerResourceIsFolder && resourceFilename == lwc && sfdx:project_opened"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint:verify": "eslint src --ext ts",
    "lint": "eslint src --ext ts --fix",
    "test": "node ./out/test/runTest.js",
    "prettier": "prettier --write \"**/*.{css,html,js,json,md,ts,yaml,yml}\"",
    "prettier:verify": "prettier --list-different \"**/*.{css,html,js,json,md,ts,yaml,yml}\"",
    "postinstall": "husky install"
  },
  "dependencies": {
    "lwc-builder-ui-dev": "^0.1.11"
  },
  "devDependencies": {
    "@salesforce/dev-config": "2.1.0",
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.2.1",
    "@types/node": "^14.14.28",
    "@types/vscode": "^1.53.0",
    "@typescript-eslint/eslint-plugin": "^4.15.2",
    "@typescript-eslint/parser": "^4.15.2",
    "eslint": "^7.21.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-header": "^3.1.1",
    "eslint-plugin-jsdoc": "^31.6.1",
    "eslint-plugin-prettier": "^3.3.1",
    "glob": "^7.1.6",
    "husky": "^5.1.2",
    "mocha": "^8.3.0",
    "pinst": "^2.1.6",
    "prettier": "^2.2.1",
    "shelljs": "0.8.4",
    "typescript": "^4.2.2",
    "vscode-test": "^1.5.0"
  }
}
