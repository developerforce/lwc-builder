{
  "name": "lwc-builder",
  "displayName": "lwc-builder",
  "publisher": "lwc-builder",
  "description": "VSCode extension to build LWC easily",
  "version": "0.1.0",
  "license": "BSD-3-Clause",
  "engines": {
    "vscode": "^1.52.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:lwc-builder.helloWorld"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "lwc-builder.helloWorld",
        "title": "Hello World"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "lint:fix": "eslint src --ext ts --fix",
    "test": "node ./out/test/runTest.js",
    "reformat": "node scripts/reformat-with-prettier.js"
  },
  "devDependencies": {
    "@salesforce/dev-config": "1.4.1",
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.0.4",
    "@types/node": "^12.11.7",
    "@types/vscode": "^1.52.0",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "eslint": "^7.19.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-header": "^3.1.1",
    "eslint-plugin-jsdoc": "^31.6.0",
    "eslint-plugin-prettier": "^3.3.1",
    "glob": "^7.1.6",
    "husky": "1.3.1",
    "mocha": "^8.2.1",
    "prettier": "^2.2.1",
    "shelljs": "0.8.3",
    "typescript": "^4.1.3",
    "vscode-test": "^1.5.0"
  },
  "husky": {
    "hooks": {
      "pre-push": "npm run lint && npm run reformat"
    }
  }
}
